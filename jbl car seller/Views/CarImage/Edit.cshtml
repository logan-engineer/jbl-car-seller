@model Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Category</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="Name" class="form-label">Category Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required maxlength="100" />
        <div class="invalid-feedback">
            Please provide a valid category name.
        </div>
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea class="form-control" id="Description" name="Description" rows="3" maxlength="500">@Model.Description</textarea>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
        // Example of Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}

