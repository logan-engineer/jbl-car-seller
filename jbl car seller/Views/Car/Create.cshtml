@model Car

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add New Car";
}

<div class="container mx-auto p-5 border-2 border" style="width:60%;">

    <h2 class="text-center text-uppercase bg-info rounded-3 mb-4 p-1">Add New Car</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="Make" class="form-label">Make</label>
            <input asp-for="Make" class="form-control" />
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Model" class="form-label">Model</label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Year" class="form-label">Year</label>
            <input asp-for="Year" type="number" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">Add Car</button>
            <a href="/Car" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
