@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager;


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white btn btn-danger px-2" asp-Controller="Account" asp-action="Logout">Logout</a>
        </li>
     
      
}

else
{
    <li class="nav-item">
            <a class="nav-link text-white btn btn-success shadow border-3 px-2" asp-Controller="Account" asp-action="Login">Login</a>
    </li>
   
}
</ul>
