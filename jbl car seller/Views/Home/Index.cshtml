<body>
    <div class="container my-5">
        <div class="row mb-5">
            <h2 class="text-center">Car Section</h2>
        </div>
        <form method="get" class="form-inline mb-5">
            <div class="row">
                <div class="col-4 d-flex justify-content-around">

                    <input type="text" id="search" name="search" class="form-control shadow" placeholder="Search by Name" value="" />
                   
                </div>
                <div class="col-6 d-flex justify-content-around">


                    <input type="number" id="minPrice" name="minPrice" class="form-control shadow" placeholder="Min Price" value="" />

                    <input type="number" id="maxPrice" name="maxPrice" class="form-control shadow" placeholder="Max Price" value="" />
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>





        </form>
        <div class="row">
           
            @foreach (var car in Model)
            {
               
                <div class="col-md-3 col-sm-12 mb-3">
                    <div class="card  border-2 shadow rounded-3 p-1 w-75" style="height:100%">
                        <img src="@car.CarImage?.ImageUrl" class="card-img-top" style="height:75%" alt="@car.Make">
                        <div class="card-body">
                            <h5 class="card-title">@car.Make</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@car.Model</h6>
                            <p class="card-text">@car.Description</p>
                            <div class="row">

                                
                                    <a href="@Url.Action("Details","Home", new { id = car.Id })" class="btn btn-primary w-100">Details</a>

                               
                            </div>


                        </div>
                    </div>
                </div>
              
            }
       
         </div>
    </div>
    <hr />

        <div class="row mb-5 mt-5">
            <h2 class="text-center">Upcomming Cars</h2>
        </div>
        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-around">
                            <img src="~/images/new-cars-model/ncm1.png" class="d-block w-25" alt="...">
                            <img src="~/images/new-cars-model/ncm2.png" class="d-block w-25" alt="...">
                            <img src="~/images/new-cars-model/ncm3.png" class="d-block w-25" alt="...">
                        </div>
                    </div>

                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-around">
                            <img src="~/images/new-cars-model/ncm1.png" class="d-block w-25" alt="...">
                            <img src="~/images/new-cars-model/ncm2.png" class="d-block w-25" alt="...">
                            <img src="~/images/new-cars-model/ncm3.png" class="d-block w-25" alt="...">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-around">
                            <img src="~/images/new-cars-model/ncm1.png" class="d-block w-25" alt="...">
                            <img src="~/images/new-cars-model/ncm2.png" class="d-block w-25" alt="...">
