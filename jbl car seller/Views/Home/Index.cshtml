            </button>
        </div>
        <hr />

    <div class="container my-5">
        <div class="row mb-5">
            <h2 class="text-center">Our Brand</h2>
        </div>

       
            <section class="sec">
                <div class="swiper mySwiper container">
                     <div class="swiper-wrapper content">
                        


                        <div class="swiper-slide card border-4 rounded-4 p-3" style="width:10%">

                         <img src="~/images/brand/audi.png"/>
                        </div>
                        <div class="swiper-slide card border-4 rounded-4 p-3" style="width:10%">
                        <img src="~/images/brand/bmw.png" />
                        </div>
                        <div class="swiper-slide card border-4 rounded-4 p-3" style="width:10%">
                        <img src="~/images/brand/nissan.png" />
                         </div>
                        <div class="swiper-slide card border-4 rounded-4 p-3" style="width:10%">
                         <img src="~/images/brand/png-transparent-toyota-logo-2017-toyota.png" />
                         </div>
                        <div class="swiper-slide card border-4 rounded-4 p-3" style="width:10%">
                         <img src="~/images/brand/png-transparent-volkswagen-group-car-volkswagen.png" />
                         </div>
                     </div>
                 </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-pagination"></div>
            </section>
            <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

            <!-- Initialize Swiper -->
            <script>
                var swiper = new Swiper(".mySwiper", {
                  slidesPerView: 4,
                  spaceBetween: 50,
                  loop: true,
                  pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                  },
                  navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                  },
                });
            </script>

      </div>
           
           









   <hr />


   
</body>

